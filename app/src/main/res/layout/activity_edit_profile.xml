<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hrmilestoneapp.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECF0F1"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:src="@drawable/hrlist_icon"
            app:civ_border_color="#999"
            app:civ_border_width="1dp" />

        <Button
            android:id="@+id/btn_edit_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center_horizontal"
            android:text="@string/change_profile_photo"
            android:textAllCaps="false"
            android:textColor="#3498DB" />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#888" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/user_profile_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="16dp"
                android:text="@string/first_name"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/user_profile_f_name"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/user_profile_fname"
                android:layout_alignBottom="@+id/user_profile_fname"
                android:layout_alignParentEnd="true"
                android:hint="@string/last_name"
                android:padding="16dp"
                android:text="Om"
                android:textColor="@color/hint_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_profile_lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/user_profile_fname"
                android:padding="16dp"
                android:text="@string/last_name"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/user_profile_l_name"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/user_profile_lname"
                android:layout_alignBottom="@+id/user_profile_lname"
                android:layout_alignParentEnd="true"
                android:hint="@string/last_name"
                android:padding="16dp"
                android:text="Shah"
                android:textColor="@color/hint_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/user_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/user_profile_lname"
                android:padding="16dp"
                android:text="@string/hint_email"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/user_profile_email"
                android:layout_alignBottom="@+id/user_profile_l_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="100dp"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:text="omshah@gmail.com"
                android:textColor="@color/hint_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_user_profile_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/user_profile_email"
                android:padding="16dp"
                android:text="@string/contact"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_user_profile_contact"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_user_profile_contact"
                android:layout_alignBottom="@+id/profile_email"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="100dp"
                android:hint="@string/contact"
                android:inputType="number"
                android:padding="16dp"
                android:text="123456789"
                android:textColor="@color/hint_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_user_profile_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_user_profile_contact"
                android:padding="16dp"
                android:text="@string/user_profile_company"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_user_profile_company"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_user_profile_company"
                android:layout_alignBottom="@+id/et_user_profile_contact"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="100dp"
                android:hint="@string/user_profile_company"
                android:inputType="number"
                android:padding="16dp"
                android:text="Infostretch"
                android:textColor="@color/hint_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_user_profile_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_user_profile_company"
                android:padding="16dp"
                android:text="@string/user_profile_company"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_user_profile_exp"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_user_profile_exp"
                android:layout_alignBottom="@+id/et_user_profile_company"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="100dp"
                android:hint="@string/user_profile_company"
                android:inputType="number"
                android:padding="16dp"
                android:text="1 year"
                android:textColor="@color/hint_color"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_profile_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/et_user_profile_exp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_main"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>


    </LinearLayout>
</ScrollView>
